    function procedToPayment() {
      addressRadio = document.querySelector('input[name="addressRadio"]:checked').value
      paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value
      couponName = document.getElementById('couponId').value
      $.ajax({
        url: '/place-order',
        data: {
          addressRadio: addressRadio,
          paymentMethod: paymentMethod,
          couponName: couponName
        },
        method: 'post',
        success: (response) => {
          if (response.codSuccess) {
            location.href = '/order-placed'
          } else if (response.pay) {
            location.replace(response.linkto)
          } else if (response.razor) {
            razorpayPayment(response)

          }
        }
      })
    }



    function razorpayPayment(order) {
